.row
  .span4
    %h1 Welcome

    = link_to "Add Recipe", new_recipe_path, class: 'btn btn-primary'
    %br



    %h2 Followers

    - @followers.each do |follower|
      %p
        = link_to follower.name, follower

    %h2 Following

    - @following.each do |following|
      %p
        = link_to following.name, following


    %h2 ALL USERS
    - @users.each do |user|
      %p
        = link_to user.name, user

  .span8
    %ul
      %li= link_to "News Feed", root_path
      %li= link_to "My Recipes", my_recipes_path
      %li= link_to "Favorite Recipes", favorite_recipes_path
      
    %h1 News Feed